<!DOCTYPE html>
<html>
  <head>
    <title>Sell-Yo-Meme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">
        <%= image_tag("u-mad-logo", class: "meme-logo")%>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav" style="justify-content:space-between">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <%= link_to "New Meme", new_meme_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Memes Home", memes_path, class: "nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if session[:user_id].nil? %>
            <li class="nav-item">
              <%= link_to "Sign In", new_sessions_path, class: "nav-link" %>
            </li>
            <li class= "nav-item">
              <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "My Profile", new_sessions_path, class: "nav-link" %>
            </li>
            <li class= "nav-item">
              <%= link_to "Sign Out", sessions_path, class: "nav-link", method: :delete %>
            </li>
          <% end %>
      </div>
    </nav>
    <%= yield %>
    <footer>
      <div id="">
      </div>
      <div id="">
      <div id="">
      </div>
    </footer>
  </body>
</html>
